// This is your Prisma schema file
generator client {
  provider      = "prisma-client-js"
  // Indispensable pour que ça marche sur votre PC ET sur Vercel
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Optionnel, recommandé pour Supabase
}

